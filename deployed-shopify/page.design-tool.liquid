<section>
  <div>

<!-- Begin TShirt Designer -->
              <div id='designer'>
              <div class='designer'>
                  <div class='canvases'>
                      <div class='canvas-container canvas-front'>
                          <canvas id='front' class='canvas'></canvas>
                      </div>
                      <div class='canvas-container canvas-back'>
                          <canvas id='back' class='canvas'></canvas>
                      </div>
                  </div>

                  <div class='canvas-action-container'>
                      <div class='controls'>
                          <div id='switch-button' class='control'>
                              <div class='control-content'>
                                  <img id='switch-side-icon' class='control-icon' src='https://cdn.shopify.com/s/files/1/0252/1785/9677/t/3/assets/switch-side-icon.png?v=1586470861'>
                                  <span id='switch-side-button-text'>Show Back</span>
                              </div>
                          </div>

                          <div id='upload-button' class='control' onClick="$('#image-upload').click()">
                              <div class='control-content'>
                                  <img class='control-icon' src='https://cdn.shopify.com/s/files/1/0252/1785/9677/t/3/assets/upload-image-icon.png?v=1586470848'>
                                  <span>Add Image</span>
                              </div>
                          </div>

                          <div id='text-art-button' class='control'>
                              <div class='control-content'>
                                  <img class='control-icon' src='https://cdn.shopify.com/s/files/1/0252/1785/9677/t/3/assets/add-text-icon.png?v=1586470879'>
                                  <span>Add Text</span>
                              </div>
                          </div>
                      </div>

                      <div class='text-art-container'>
                          <table class='text-art-table'>
                              <tr>
                                  <td>Font</td>
                                  <td>
                                      <select id='text-art-font-select'>
                                          <option value="times">Times</option>
                                          <option value="arial">Arial</option>
                                          <option value="comic-sans">Comic Sans</option>
                                          <option value="courier-new">Courier New</option>
                                          <option value="helvetica">Helvetica</option>
                                      </select>
                                  </td>
                              </tr>
                              <tr>
                                  <td>Color</td>
                                  <td>
                                      <button id='text-art-color-select' class="jscolor {valueElement:null,value:'000000'}"></button>
                                  </td>
                              </tr>
                          </table>
                          <button id='text-art-add-button' class='button'>
                              <img class='button-icon' src="https://cdn.shopify.com/s/files/1/0252/1785/9677/t/3/assets/add-icon.png?v=1586470832">
                              <span>Add</span>
                          </button>
                      </div>

                      <button id='delete-element-button' class='button delete-button'>Delete Element</button>

                      <!-- hidden file upload -->
                      <input type='file' id="image-upload" name="image-upload"
                      accept=".jpg, .jpeg, .png">
                  </div>
              </div>

              <div class='content-block'>
                  <h1 class='t-shirt-designer-title no-responsive'>Design your <span class='orange'>t-shirt</span></h1>
                  <div class='options'>
                      <h2>Options</h2>
                      <div class='styles option'>
                          <h3>Styles</h3>
                          <div class='style-container'></div>
                      </div>
                      <div class='ink-colors'>
                          <h3>Ink Colors</h3>
                          <p>Number of colors in design<p>
                              <select id='ink-color-number-select'>
                                  <option value=1>1-3</option>
                                  <option value=2>4-6</option>
                                  <option value=3>7-9</option>
                                  <option value=4>10+</option>
                              </select>
                              </div>

                              <div class='quantities option'>
                                  <h3>Quantities</h3>
                                  <table class='quantities-table'>
                                    <tr>
                                        <td>
                                            XS  <input class='quantity-input' type='string' name='xs' value=0 min=0><br>
                                        </td>
                                        <td>
                                            L   <input class= 'quantity-input' type='string' name='l' value=0 min=0><br>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            S   <input class='quantity-input' type='string' name='s' value=0 min=0><br>
                                        </td>
                                        <td>
                                            XL  <input class='quantity-input' type='string' name='xl' value=0 min=0><br>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            M   <input class='quantity-input' type='string' name='m' value=0 min=0><br>
                                        </td>
                                        <td>
                                            2XL <input class='quantity-input' type='string' name='xl2' value=0 min=0><br>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            Total <span id='total-quantity'>0</span>
                                        </td>
                                    </tr>
                                </table>
                              </div>
                              <div class='option addons'>
                                  <h3>Addons</h3>
                                  <p>
                                      Check any of the additional options below you require for your print.
                                  </p>
                                  <table class='addon-container'>
                                  </table>
                              </div>
                              <div class='additional-comments option'>
                                  <h3>Additional Comments</h3>
                                  <p>
                                      Use this space to add any additional comments that might help us
                                      get a more accurate quote for your order, or if you just have any
                                      questions.
                                  </p>
                                  <textarea
                                  id='additional-comments-text'
                                  placeholder="Type your comments here..."
                                  ></textarea>
                              </div>

                              <div class="form-errors"></div>
                              <button id='submit-form' class='button submit-button' onclick="submitForm()">Submit</button>

                              </div>
                              </div>

                              <div class='final-modal'>
                                  <div class='email-input'>
                                      <h2>One Last Step</h2>
                                      <p>Please enter your email to get your quote!</p>
                                      <div class="email-input-errors"></div>
                                      <input id='email' type='email' name='email' placeholder='Please enter your email'>
                                      <input id='name' type='name' name='name' placeholder='Please enter your full name'>
                                      <button id='submit-email' class='button submit-button' onclick="submitEmail()">Submit</button>
                                  </div>
                                  <div class='price-display'>
                                      <h2>Your Quote</h2>
                                      <table>
                                          <tr>
                                              <td>Total Quantity</td>
                                              <td class="total-quantity"></td>
                                          </tr>
                                          <tr class="final-cost-row">
                <td>
                    Total Estimated Cost
                </td>
                <td class="final-cost">

                </td>
            </tr>
        </table>
        <p>Your quote has been submitted. We will be in contact shortly!</p>
        <button class="button start-over-button" onclick="startOver()">Close</button>
    </div>
    <div class="error-display">
        <h2>Error</h2>
        <p>Unfortunately, an error occurred while trying to process your request.  Please try again later.</p>
        <button class="button start-over-button" onclick="startOver()">Close</button>
    </div>
    <div class='spinner'></div>
</div>

<div class='modal-background'></div>
</div>
                <!-- T Shirt Designer Scripts -->
                <!-- Fabric -->
                <script src="{{ 'fabric.js' | asset_url }}" defer="defer"></script>
                <script src="{{ 'main.js' | asset_url }}" defer="defer"></script>
                <script src="{{ 'canvas.js' | asset_url }}" defer="defer"></script>
                <script src="{{ 'data.js' | asset_url }}" defer="defer"></script>
                <script src="{{ 'jscolor.js' | asset_url }}" defer="defer"></script>

<!-- jQuery first, then Popper.js, then Bootstrap JS -->
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>


</section></div>
